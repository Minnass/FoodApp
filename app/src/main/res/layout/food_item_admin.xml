<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerSearchedItem"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="8dp"
        android:id="@+id/cartview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/imageItem_admin"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
             />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/foodName_item_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cartview"
        android:text="BÃ¡nh canh"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/foodOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_baseline_more_vert_24" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:layout_below="@+id/cartview"
        android:layout_marginTop="10dp"
        android:background="#C6D3C7" />
</RelativeLayout>