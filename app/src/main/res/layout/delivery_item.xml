<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_blue_textview">

    <ImageView
        android:id="@+id/delivery_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/location" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/deliveryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bình thường"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="italic"
            android:text="Đơn hàng sẽ được giao sớm  hơn dự kiến"
            android:id="@+id/deliveryDescription"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_marginRight="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/checkImage"
        android:src="@drawable/ic_baseline_check_circle_24" />
</LinearLayout>