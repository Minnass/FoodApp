<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/close_buynow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"


        android:src="@drawable/close" />

    <RelativeLayout
        android:id="@+id/rlLayout4"
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/foodImage_buynow"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/foodName_buynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/foodImage_buynow"
            android:text="Bánh canh"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/foodImage_buynow"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/foodImage_buynow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/originalPrice_buyNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20,000 VND"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sale_buyNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm 10%"
                    android:textColor="#f12312"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/currentPrice_buyNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="20,000 VND"
                    android:textColor="#f12312"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlLayout5"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rlLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"

            android:text="Số lượng"/>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="#D6E2EC"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/decrease_buynow"
                android:src="@drawable/ic_baseline_remove_24"/>
            <TextView
                android:id="@+id/quantityItemCart_buyNow"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="0"

                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:background="#D6E2EC"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/increase_buyNow"
                android:src="@drawable/ic_baseline_add_24"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/btnBuyNow_buyNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlLayout5"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_green"
        android:gravity="center"
        android:padding="11dp"
        android:text="Mua ngay"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>