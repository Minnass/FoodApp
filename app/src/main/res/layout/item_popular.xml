<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_itemPopular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="15dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="3dp"
        android:text="Pizza-Level-1"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/img_popular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/discount_text_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/layout_discount"
                android:gravity="center"
                android:padding="2dp"
                android:text="Giảm 10%"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/originalPrice_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 000 VND"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentPrice_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/originalPrice_popular"
            android:layout_marginTop="2dp"
            android:text="90 000 VND"
            android:textColor="#f21322"
            android:textSize="11sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/favorite_ItemPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_orange_textview"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Yêu thích"
                android:textColor="#E30819"
                android:textSize="10dp" />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>