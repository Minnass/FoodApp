<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1E9E9ED"
    tools:context=".Activities.MainHomeActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nvg" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nvg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#FFFCFC"
        app:itemIconTint="@color/bottom_nvg"
        app:itemTextColor="#FF1100"
        app:itemRippleColor="@color/purple_200"
        app:menu="@menu/bottom_nvg" />


</RelativeLayout>
