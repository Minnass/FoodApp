<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ItemContainer_paymentItem"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <LinearLayout
       android:gravity="center_vertical"

       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <androidx.cardview.widget.CardView
           android:layout_marginLeft="8dp"
           android:id="@+id/cartview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:cardCornerRadius="5dp">

           <ImageView
               android:id="@+id/imageItem_paymentItem"
               android:layout_width="90dp"
               android:layout_height="70dp"
               android:scaleType="fitXY"
               android:src="@drawable/anh01" />
       </androidx.cardview.widget.CardView>

       <RelativeLayout

           android:layout_marginLeft="10dp"
           android:layout_width="match_parent"
           android:layout_height="100dp">

           <TextView
               android:id="@+id/foodName_itemPayment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Bánh phở "
               android:textColor="@color/black"
               android:textSize="15dp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/originalPrice_paymentItem"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/foodName_itemPayment"
               android:layout_marginTop="15dp"
               android:text="10.000 VND"
               android:textColor="@color/black"
               android:textSize="12dp" />
           <LinearLayout
               android:layout_marginTop="2dp"
               android:layout_below="@id/originalPrice_paymentItem"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView

                   android:text="Giảm 10%"
                   android:id="@+id/sale_paymentItem"
                   android:textStyle="bold"
                   android:textColor="@color/deepOrange900"
                   android:textSize="12dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_marginLeft="10dp"
                   android:text="10.000 VND"
                   android:id="@+id/currentPrice_paymentItem"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:textSize="12dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:paddingLeft="10dp"
               android:paddingRight="10dp">

               <TextView
                   android:id="@+id/totalPrice_itemPayment"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="175.000 d"
                   android:textColor="@color/black"
                   android:textSize="13dp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/quantity_paymentItem"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:text="Số lượng: 1"
                   android:textColor="@color/black"
                   android:textSize="13dp"
                   android:textStyle="bold" />

           </RelativeLayout>


       </RelativeLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
      android:id="@+id/notion_container"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_width="20dp"
        android:src="@drawable/ic_baseline_event_note_24"
        android:layout_height="20dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:text="Bỏ ít đá"
            android:textStyle="italic"
            android:textSize="12dp"
            android:textColor="#f12121"
            android:layout_width="wrap_content"
            android:id="@+id/notion"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1E6E6"
        />
</LinearLayout>